<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AIBookExtractor" 
        x:Class="AIBookExtractor.ProgressDialog"
        x:DataType="local:ProgressDialog" 
        Title="Loading PDF"
        Width="300" Height="150"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBlock x:Name="ProgressText" Text="Processing PDF..." HorizontalAlignment="Center"/>
        <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Height="20" Margin="0,10,0,0" Value="{Binding ProgressValue}"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</Window>