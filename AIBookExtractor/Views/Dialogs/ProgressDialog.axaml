<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AIBookExtractor.Views.Dialogs.ProgressDialog"
        Title="Processing..."
        Width="400"
        Height="150"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="ProgressText" 
                   Text="Processing PDF..." 
                   Grid.Row="0"
                   Margin="0,0,0,10"/>
        
        <ProgressBar x:Name="ProgressBar"
                     Grid.Row="1"
                     Height="20"
                     Minimum="0"
                     Maximum="100"
                     Value="{ReflectionBinding ProgressValue}"/>
        
        <Button x:Name="CancelButton"
                Grid.Row="2"
                Content="Cancel"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                MinWidth="80"
                Click="CancelButton_Click"/>
    </Grid>
</Window>